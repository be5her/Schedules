@model IEnumerable<Logic.ViewModel.SchoolView>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.School_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Is_joined)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Added_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Added_by)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Stage_name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.School_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Is_joined)
            </td>
            <td>
                @{
                    var date = item.Added_date.ToString("MM/dd/yyyy");
                }
                @Html.DisplayFor(modelItem => date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Added_by_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stage_name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.School_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.School_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.School_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
