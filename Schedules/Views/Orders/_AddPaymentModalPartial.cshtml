@model Schedules_classes.Payment


    <!-- Modal -->
    <div class="modal fade" id="AddPaymentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" dir="rtl">
        <div class="modal-dialog" role="document">
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title">إضافة دفعة</h5>
                    <button type="button" class="close ml-0" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>

                <div class="modal-body">
                    <form asp-action="AddPayment">
                        <input value="@Model.Order_id" asp-for="Order_id" hidden/>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Amount" class="control-label">المبلغ المدفوع</label>
                            <input asp-for="Amount" class="form-control" value="" required/>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Method" class="control-label">طريقة الدفع</label>
                            <input asp-for="Method" class="form-control" required/>
                            <span asp-validation-for="Method" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Payment_py" class="control-label">الدفع بواسطة</label>
                            <input asp-for="Payment_py" class="form-control" required/>
                            <span asp-validation-for="Payment_py" class="text-danger"></span>
                        </div>
                    </form>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">إغلاق</button>
                    <div></div>
                    <button type="button" class="btn btn-success" data-save="payment">حفظ</button>
                </div>

            </div>
        </div>
    </div>